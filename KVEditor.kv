<Editor>:
    orientation: 'horizontal'
    spacing: 10
    padding: 10

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.25
        spacing: 5

        Label:
            text: 'Adicionar Widget'
            size_hint_y: None
            height: 30
            bold: True

        Button:
            text: 'Adicionar Botão'
            on_release: root.add_widget_to_canvas('Button')

        Button:
            text: 'Adicionar Label'
            on_release: root.add_widget_to_canvas('Label')

        Button:
            text: 'Adicionar TextInput'
            on_release: root.add_widget_to_canvas('TextInput')

        Label:
            text: 'Exportações'
            size_hint_y: None
            height: 30
            bold: True

        Button:
            text: 'Exportar .kv'
            on_release: root.export_layout()

        Button:
            text: 'Exportar como Imagem'
            on_release: root.export_as_image()

        Label:
            text: 'Projeto'
            size_hint_y: None
            height: 30

        Button:
            text: 'Salvar Projeto'
            on_release: root.save_project()

        Button:
            text: 'Carregar Projeto'
            on_release: root.load_project()

        Button:
            text: 'Remover Widget Selecionado'
            on_release: root.remove_selected_widget()


    FloatLayout:
        id: canvas_area
        size_hint_x: 0.55
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size


    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.2
        spacing: 5

        Label:
            id: prop_label
            text: 'Nenhum widget selecionado'
            size_hint_y: None
            height: 30

        Label:
            text: 'Texto'
            size_hint_y: None
            height: 20
        TextInput:
            id: prop_text
            multiline: False
            on_text: root.update_selected_text(self.text)

        Label:
            text: 'ID'
            size_hint_y: None
            height: 20
        TextInput:
            id: prop_id
            multiline: False
            on_text: root.update_selected_id(self.text)

        Label:
            text: 'Largura'
            size_hint_y: None
            height: 20
        TextInput:
            id: prop_width
            multiline: False
            on_text: root.update_selected_width(self.text)

        Label:
            text: 'Altura'
            size_hint_y: None
            height: 20
        TextInput:
            id: prop_height
            multiline: False
            on_text: root.update_selected_height(self.text)

        Button:
            text: 'Cor do Texto'
            size_hint_y: None
            height: 40
            on_release: root.open_color_picker('text')

        Button:
            text: 'Cor de Fundo'
            size_hint_y: None
            height: 40
            on_release: root.open_color_picker('background')
